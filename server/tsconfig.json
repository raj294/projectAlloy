{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": ["node"],
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "diagnostics": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
